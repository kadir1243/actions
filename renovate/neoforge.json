{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>neoforged/actions:renovate_preset",
        ":semanticCommitsDisabled"
    ],
    "baseBranches": [
        "$default",
        "1.21.1",
        "1.20.2"
    ],
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": [
                "gradle\\.properties$"
            ],
            "matchStrings": [
                "# renovate: (?<depName>[\\w:\\.-]+)\\s+[A-Za-z_]+=(?<currentValue>[\\d\\.]+)"
            ],
            "datasourceTemplate": "maven"
        }
    ],
    "packageRules": [
        {
            "__comment__": "Disable major updates by default",
            "matchUpdateTypes": [
                "major"
            ],
            "enabled": false
        },
        {
            "__comment__": "Enable major updates on the default branch",
            "matchUpdateTypes": [
                "major"
            ],
            "matchBaseBranches": [
                "1.21.x"
            ],
            "enabled": true
        },

        {
            "matchDepNames": ["net.neoforged.gradle.platform"],
            "allowedVersions": "7.0.95"
        },

        {
            "__comment__": "Avoid updating libs shipped by MC",
            "matchDepPatterns": [
                "^org\\.apache\\.commons:",
                "^org\\.apache\\.logging\\.log4j:",
                "^com\\.google\\.code\\.gson:gson"
            ],
            "enabled": false
        },

        {
            "matchDepNames": [
                "net.neoforged:minecraft-dependencies"
            ],
            "enabled": false
        }
    ]
}
